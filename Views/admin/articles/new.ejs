<%-include('../../partials/header.ejs')%>
<%-include('../../partials/navBar.ejs')%>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        
       <div class="card-body">
        <form action="/articles/save" method="POST">
            <input  class="form-control" type="text" name="title" placeholder="Defina o titulo do artigo"><br>
            <textarea class="form-control" placeholder="Escreva seu artigo aqui" name="body"></textarea><br>
            <label>Categoria</label>
            <select name="category" class="form-control">
                <%categories.forEach((category)=>{%>
                    <option value="<%=category.id%>"><%=category.title%></option>
                <%})%>
            </select><br>
            <button class="btn btn-success" type="submit">Cadastrar</button>
        </form>
       </div>
    </div>
</div>


<%-include('../../partials/footer.ejs')%>